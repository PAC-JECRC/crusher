{
    "isEnterprise": "<%= isEnterprise ? "true" : "false" %>",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noEmitHelpers": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"paths": {
			<% if(isEnterprise) { %>
				"@modules/*": ["./ee/modules/*", "./src/modules/*"],
				"@bootstrap": ["./ee/bootstrap.ts", "./src/bootstrap.ts"],
				"@worker/*": ["./ee/worker/*", "./src/worker/*"],
	<% } else {%>
				"@bootstrap": ["./src/bootstrap.ts"],
				"@modules/*": ["./src/modules/*"],
				"@worker/*": ["./src/worker/*"],
	<% } %>
				"@src/*": ["./src/*"],
				"@shared/*": ["../crusher-shared/*"],
				"@crusher-shared/*": ["../crusher-shared/*"],
				"@models/*": ["./src/models/*"],
				"@config/*": ["./config/*"],
				"@utils/*": ["./src/utils/*"],
				"@generator/*": ["../code-generator/*"]
		}
	},
	"files": [
		"./index.ts"
	],
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}

