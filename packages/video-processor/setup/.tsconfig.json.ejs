{
    "isEnterprise": "<%= isEnterprise ? "true" : "false" %>",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noEmitHelpers": false,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"paths": {
<% if(isEnterprise) { %>
			"@src/*": ["./src_ee/*", "./src/*"],
			"@manager/*": ["./src_ee/manager/*", "./src/manager/*"],
<% } else { %>
            "@src/*": ["./src/*"],
            "@manager/*": ["./src/manager/*"],
<% } %>
			"@services/*": ["./src/services/*"],
			"@config/*": ["./config/*"],
			"@shared/*": ["../crusher-shared/*"],
 			"@utils/*": ["./utils/*"]
		}
	},
	"files": [
		"./index.ts"
	],
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}

