{
	"isEnterprise": "<%= isEnterprise ? "true" : "false" %>",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"paths": {
<% if(isEnterprise) { %>
			"@src/*": ["./src_ee/*", "./src/*"],
			"@manager/*": ["./src_ee/manager/*", "./src/manager/*"],
<% } else {%>
            "@src/*": ["./src/*"],
            "@manager/*": ["./src/manager/*"],
<% } %>
			"@shared/*": ["../crusher-shared/*"],
			"@models/*": ["./src/models/*"],
			"@config/*": ["./config/*"],
			"@util/*": ["./src/util/*"],
			"@generator/*": ["../code-generator/*"]
		}
	},
	"typeRoots": ["node_modules/@types"],
	"files": [
		"./src/index.ts",
<% if(isEnterprise) { %>
		"./src_ee/index.ts",
<% } %>
		"./index.ts"
	],
	"include": [
<% if(isEnterprise) { %>
		"./src_ee/**/*",
<% } %>
		"./src/**/*"
	],
	"exclude": ["**/*.spec.ts"]
}

