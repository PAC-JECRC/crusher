{
	"isEnterprise": "<%= isEnterprise ? "true" : "false" %>",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"paths": {
<% if(isEnterprise) { %>
			"@modules/*": ["./ee/modules/*", "./src/modules/*"],
			"@bootstrap": ["./ee/bootstrap.ts"]
			"@manager/*": ["./src_ee/manager/*", "./src/manager/*"],
<% } else {%>
			"@bootstrap": ["./src/bootstrap.ts"]
			"@modules/*": ["./src/modules/*"],
      "@manager/*": ["./src/manager/*"],
<% } %>
			"@src/*": ["./src/*"],
			"@shared/*": ["../crusher-shared/*"],
			"@crusher-shared/*": ["../crusher-shared/*"],
			"@models/*": ["./src/models/*"],
			"@config/*": ["./config/*"],
			"@util/*": ["./src/util/*"],
			"@generator/*": ["../code-generator/*"]
		}
	},
	"typeRoots": ["node_modules/@types"],
	"files": [
		"./src/index.ts",
<% if(isEnterprise) { %>
		"./src_ee/index.ts",
<% } %>
		"./index.ts"
	],
	"include": [
<% if(isEnterprise) { %>
		"./src_ee/**/*",
<% } %>
		"./src/**/*"
	],
	"exclude": ["**/*.spec.ts"]
}

