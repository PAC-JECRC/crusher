{
	"isEnterprise": "false",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"outDir": "build",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
        "paths": {
            "@src/*": ["src/*"]
        }
	},
	"typeRoots": ["node_modules/@types"],
	"files": [
		"src/index.ts"
	],
	"include": ["./src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
