{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"module": "commonjs",
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"allowJs": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"strictNullChecks": false,
		"outDir": "dist",
		"paths": {
			"@crusher-shared/*": ["../crusher-shared/*"]
		}
	},
	"files": ["./src/actions/index.ts", "./src/functions/index.ts", "./src/middlewares/index.ts"],
	"typeRoots": ["node_modules/@types"],
	"include": ["./src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
